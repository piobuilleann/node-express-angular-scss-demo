extends layout

block body
  div#header
    div#headWrapper
      a#logo(href="/") Company Name
      a#user(ui-sref=".simpleFS") User's Name
  div#container(ng-controller='AppCtrl')
    div#wrapper
      div#nav
        div#primaryNav
          div.navLinkContainer(ui-view='simpleFS@nav')  
        include secondaryNav.jade
            
      div#content(ui-view='simpleFS@content')
    include secondaryNav.jade

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/ct-ui-router-extras.min.js')
  script(src='js/lib/angular/angular-ui-router.min.js')
  script(src='js/lib/angular/angular-file-upload.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
